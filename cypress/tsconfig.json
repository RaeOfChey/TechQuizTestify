{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node", "@testing-library/cypress"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx", // Recommended for React 17+
    "strict": true
  },
  "files": [
    "../client/src/components/Quiz.tsx"
  ],
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "components/**/*.ts"
  ]
}  